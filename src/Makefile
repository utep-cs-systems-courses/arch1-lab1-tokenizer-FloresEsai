# compliler flags. -g for debug, -O3 for optimization
CFLAGS=-g -O3

# first target is built by defaut
all: tokenizer


# include file dependencies
history.o: history.h
tokenizer.o: tokenizer.h

# $@=target, $^=prerequisites
tokenizer: tokenizer.o
	cc -o $@ $^ $(CFLAGS)


# deletes files generated by compilation
clean:

	rm -f *.o tokenizer
